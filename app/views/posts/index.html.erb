<h1>Posts</h1>
<div class="postsContainer">
    <% @posts.each do |post| %>
        <h3><%= post.title %></h3>
        <% if user_signed_in? %><h4><%= post.author %>
          </h4>
        <% end %>
        <p><%= post.content %></p>
        <% end %>
</div>
  <%= link_to "New Post", new_post_path %>
