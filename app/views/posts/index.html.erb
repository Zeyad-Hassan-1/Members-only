<h1>Posts</h1>
<div class="posts-container">
    <% @posts.each do |post| %>
      <div class="post-card">
        <h3><%= link_to post.title, post_path(post) %></h3>
          <% if user_signed_in? %><h4><%= post.author %>
            </h4>
          <% end %>
          <p><%= post.content %></p>
      </div>
  <% end %>
</div>
  <%= link_to "New Post", new_post_path %>
